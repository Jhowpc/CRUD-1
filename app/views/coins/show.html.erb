<p style="color: blue"><%= notice %></p>


<form class=" grid text-center col-md-6 g-col-6" >
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:description), style: "display: block" %></br>
    <%= text_field_tag nil, @coin.description, class: "form-control", disabled: true%></br>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym), style: "display: block" %></br>
    <%= text_field_tag nil, @coin.acronym, class: "form-control", disabled: true%></br>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:url_image), style: "display: block" %></br>
    <%= text_field_tag nil, @coin.url_image, class: "form-control", disabled: true%></br>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type), style: "display: block" %></br>
    <%= text_field_tag nil,@coin.mining_type.description , class: "form-control", disabled: true%></br>
  </div>
</form>

