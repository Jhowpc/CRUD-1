<p style="color: green"> <%= notice %> </p>
<p> <strong> <%= t('dateword')%> </strong> <%= l(Date.today)%> <p>
<h1> <%=t('coins.')%> </h1>
<h2> <%= cookies[:curso]%> </h2>
<h2> <%= session[:curso]%> </h2>
<div id="Moedas">
  <table class="table table-dark table-hover table-sm">
    <thead>
      <tr>
        <th> <%= t('description')%> </th>
        <th> <%= t('acronym')%> </th>
        <th><%= t('url_image')%></th>
      </tr>

    </thead>
    <tbody>
      <% @coins.each do |coin| %>
        <%= render coin %>
      <% end %>
    </tbody>
  </table>  
</div>
<div>
   <button type="button" class="btn btn-outline-dark">
    <%= link_to t('links.add_new'), new_coin_path, class: "link-light" %>
   </button>
  <button type="button" class="btn btn-outline-dark">
    <%= link_to t('links.homepage'), root_path, class: "link-light" %>
  </button>
</div>

<style>
  table, th, td {
    border: 1px solid white;
    margin-bottom: auto;
    border-collapse: colapse;
    color: #fff;

  }

  body {
    background-image: asset-url('fundo.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed; 
    background-size: 100% 100%;
  }

</style>