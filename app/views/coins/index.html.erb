<p style="color: green"> <%= notice %> </p>
<p> <strong> <%= t('dateword')%> </strong> <%= l(Date.today)%> <p>
<h1> <%=Coin.model_name.human(count: @coins.count)%> </h1>
<div id="Moedas">
  <table class="table table-dark table-hover table-sm">
    <thead>
      <tr>
        <th> <%= @coins.human_attribute_name(:description)%> </th>
        <th> <%=@coins.human_attribute_name(:acronym)%> </th>
        <th><%=@coins.human_attribute_name(:url_image)%></th>
      </tr>
    </thead>
    <tbody>
      <% @coins.each do |coin| %>
        <%= render coin %>
      <% end %>
    </tbody>
  </table>  
</div>
<div>
  <%= link_to t('links.add_new'), new_coin_path, class: "btn btn-dark" %>
  <%= link_to t('links.homepage'), root_path, class: "btn btn-dark" %>
</div>
