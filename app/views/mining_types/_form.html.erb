<%= form_with(model: mining_type) do |form| %>
  <% if mining_type.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(mining_type.errors.count, "error")%> <%= t('textsave') %> :</h2>

      <ul>
        <% mining_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid text-center col-md-6 g-col-6" >
    <div class="form-group" >
      <%= form.label t('description'), style: "display: block" %></br>
      <%= form.text_field :description, class: "form-control grid text-center ", placeholder: "ex: Proof of Work" %></br>
    </div>

    <div class="form-group">
      <%= form.label t('acronym'), style: "display: block" %></br>
      <%= form.text_field :acronym, class: "form-control grid text-center", placeholder: "ex: PoW" %></br>
    </div>

    <div class="form-check">
      <%= form.submit nil, class: "btn btn-outline-light" %></br>
    </div>
  </div> 
<% end %>
