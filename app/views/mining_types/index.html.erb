<p style="color: green"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count)%></h1>

<div id="mining_types">
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th><%= @mining_types.human_attribute_name(:description) %></th>
        <th><%= @mining_types.human_attribute_name(:acronym) %></th>
       <p>
       </p>
      </tr>
    </thead>
    <tbody>
        <% @mining_types.each do |mining_type| %>
        <%= render mining_type %>
        <% end %>
    </tbody>
  </table>
</div>


<div>
  <%= link_to t('links.add_new'), new_mining_type_path, class: "btn btn-dark" %>
  <%= link_to t('links.homepage'), root_path, class: "btn btn-dark"%>
</div>

